<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcomepage">

    <View
        android:id="@+id/upperpart"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/main"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/lowerpart"
        android:layout_width="match_parent"
        android:layout_height="572dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/lower_design"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Letstalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/main"
        android:fontFamily="@font/montserrat_bold"
        android:text="About Us"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/Letstalkupperpart"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/Letstalk"
        app:layout_constraintRight_toRightOf="@id/Letstalk"/>

    <View
        android:id="@+id/letstalklowerpart"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@id/Letstalk"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/Letstalk"/>
    <!--design start-->
    <View
        android:id="@+id/view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/designbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/design3right"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="278dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/designbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/design4right"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="246dp"
        android:layout_marginTop="67dp"
        android:background="@drawable/designbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="43dp"
        android:background="@drawable/designbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--design end-->

</androidx.constraintlayout.widget.ConstraintLayout>